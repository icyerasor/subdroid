<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:myapp="http://schemas.android.com/apk/res/com.feldschmid.subdroid"
		android:orientation="vertical"
		android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	style="@style/myBackground" >
    	
	<com.admob.android.ads.AdView android:id="@+id/ad"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		myapp:backgroundColor="#000000" myapp:primaryTextColor="#FFFFFF"
		myapp:secondaryTextColor="#CCCCCC" />    	
    	
	<!-- <Button android:id="@+id/revisions_refresh" 
	  android:text="@string/revisions_menu_refresh"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" /> -->
		
    <ListView android:id="@+id/android:list"
		android:layout_width="fill_parent"
		android:layout_height="0dp" 
        android:layout_weight="1"
        android:scrollbarStyle="outsideInset" 
        android:divider="?dividerColor" 
        android:dividerHeight="1dp" />

  	<TextView android:id="@+id/android:empty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_revisions"/>
</LinearLayout>